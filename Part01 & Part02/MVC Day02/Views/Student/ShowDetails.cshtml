@model Student

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Student Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>ID:</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Age:</th>
                    <td>@Model.Age</td>
                </tr>
                <tr>
                    <th>Courses:</th>
                    <td>
                        <ul class="list-group">
                            @foreach (var course in Model.StuCrsRes.Select(sc => sc.Course))
                            {
                                <li class="list-group-item">@course?.Name</li>
                            }
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Department:</th>
                    <td>@Model.Department?.Name</td>
                </tr>
            </table>
            <a href="/Student/ShowAll" class="btn btn-primary">Back to ShowAll</a>
        </div>
    </div>
</div>
