@model List<Student>

<div class="container mt-5">
    <h2>All Students</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Courses</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>
                        <ul class="list-group">
                            @foreach (var course in student.StuCrsRes.Select(sc => sc.Course))
                            {
                                <li class="list-group-item">@course?.Name</li>
                            }
                        </ul>
                    </td>
                    <td>@student.Department?.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
